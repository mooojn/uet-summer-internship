<odoo>
    
    <record id="view_ustadam_course_form" model="ir.ui.view">
        <field name="name">ustadam.course.form</field>
        <field name="model">ustadam.course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="img" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_ustadam_course_tree" model="ir.ui.view">
        <field name="name">ustadam.course.tree</field>
        <field name="model">ustadam.course</field>
        <field name="arch" type="xml">
            <tree string="Course List">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    
</odoo>
